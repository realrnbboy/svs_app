<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_clear_24"
            android:tint="@android:color/black"
            android:background="@android:color/transparent"
            />


    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/signallink_dark"
        android:scaleType="centerInside" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/row_side_padding_dp_15"
        android:text="Vibration Monitoring Solution"
        android:textSize="@dimen/font_midium"
        android:gravity="center"
        android:padding="10dp"/>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/row_side_margin_dp_15">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLoginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="ID"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/row_side_margin_dp_15">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"/>

    </com.google.android.material.textfield.TextInputLayout>
    
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        style="@style/row_side_margin_dp_15"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@drawable/selector_button_login_txt"
        android:textSize="@dimen/font_midium"
        android:text="Login"
        android:enabled="false"
        android:background="@drawable/selector_button_login_bg"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnSignIn"
            style="@style/row_side_margin_dp_15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_midium"
            android:text="SignIn"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        style="@style/row_side_padding_dp_15">

        <Button
            android:id="@+id/btnForgotId"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_midium"
            android:text="forgot ID?"/>

        <Button
            android:id="@+id/btnForgotPassword"
            android:layout_width="0dp"
            android:layout_weight="16"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_midium"
            android:text="forgot Password?"/>


    </LinearLayout>

</LinearLayout>