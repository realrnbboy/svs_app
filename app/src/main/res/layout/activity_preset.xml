<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMain"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/app_bar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                style="@style/item_sub_layout"
                android:layout_marginTop="@dimen/margin_default">

                <Spinner
                    android:id="@+id/spinnerPreset"
                    style="@style/preset_item_spinner"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_default"
                style="@style/row_side_padding_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myblue"
                    android:textSize="@dimen/font_midium"
                    android:text="Date &amp; Time" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/item_sub_layout">

                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="current time"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/preset_item_other_contents"
                android:orientation="horizontal"
                style="@style/row_side_padding_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myblue"
                    android:textSize="@dimen/font_midium"
                    android:text="Site &amp; Equipment code" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/item_sub_layout">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Site code :"/>

                    <EditText
                        android:id="@+id/editTextSiteCode"
                        android:text="HDO"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Equipment code :"/>

                    <Spinner
                        android:id="@+id/spinnerEquipmentCode"
                        style="@style/preset_item_spinner"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/preset_item_other_contents"
                style="@style/row_side_padding_dp_15">

                <TextView
                    style="@style/preset_item_textview"
                    android:text="Equipment info" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/item_sub_layout">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Equipment name :"/>

                    <EditText
                        android:id="@+id/editTextEquipmentName"
                        android:text="Charge Equipment"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Input power :"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/editTextInputPower"
                            android:layout_weight="1"
                            android:text="980"
                            android:inputType="numberDecimal"
                            style="@style/preset_item_edittext"/>

                        <TextView
                            style="@style/preset_item_textview"
                            android:text=" kW"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Line frequency :"/>

                    <Spinner
                        android:id="@+id/spinnerLineFrequency"
                        style="@style/preset_item_spinner"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Equipment type :"/>

                    <Spinner
                        android:id="@+id/spinnerEquipmentType"
                        style="@style/preset_item_spinner"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Equipment RPM :"/>

                    <EditText
                        android:id="@+id/editTextEquipmentRpm"
                        android:text="3579"
                        android:inputType="numberDecimal"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Blade / Vane :"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextBladeVane"
                            android:layout_weight="1"
                            android:text="5"
                            android:inputType="numberDecimal"
                            style="@style/preset_item_edittext"/>

                        <TextView
                            style="@style/preset_item_textview"
                            android:text=" EA"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/preset_item_other_contents"
                android:orientation="horizontal"
                style="@style/row_side_padding_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myblue"
                    android:textSize="@dimen/font_midium"
                    android:text="Bearing info" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/item_sub_layout">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Bearing type :"/>

                    <Spinner
                        android:id="@+id/spinnerBearingType"
                        style="@style/preset_item_spinner"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="No of balls :"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextNoOfBalls"
                            android:layout_weight="1"
                            android:text="0"
                            android:inputType="numberDecimal"
                            style="@style/preset_item_edittext"/>

                        <TextView
                            android:layout_gravity="bottom"
                            style="@style/preset_item_textview"
                            android:text=" EA"/>
                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Project VIB spec:"/>

                    <EditText
                        android:id="@+id/editTextProjectVibSpec"
                        android:text="1"
                        android:inputType="numberDecimal"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Tag No. :"/>

                    <EditText
                        android:id="@+id/editTextTagNo"
                        android:text="PP-L25-51"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Pitch diameter:"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextPitchDiameter"
                            android:layout_weight="1"
                            android:text="0"
                            android:inputType="numberDecimal"
                            style="@style/preset_item_edittext"/>

                        <TextView
                            style="@style/preset_item_textview"
                            android:text=" mm"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Ball diameter:"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextBallDiameter"
                        android:layout_weight="1"
                        android:text="0"
                        android:inputType="numberDecimal"
                        style="@style/preset_item_edittext"/>

                        <TextView
                            style="@style/preset_item_textview"
                            android:text=" mm"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="RPS:"/>

                    <EditText
                        android:id="@+id/editTextRps"
                        android:text="0"
                        android:inputType="numberDecimal"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Contact angle:"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextContactAngle"
                            android:layout_weight="1"
                            android:text="0"
                            android:inputType="numberDecimal"
                            style="@style/preset_item_edittext"/>

                        <TextView
                            style="@style/preset_item_textview"
                            android:text=" degree"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 플로팅 버튼 -->
            <LinearLayout
                android:id="@+id/floatingView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorContent"
                android:layout_marginTop="@dimen/margin_confirm_top"
                android:padding="5dp">

                <Button
                    android:id="@+id/buttonNext"
                    style="@style/button_confirm"
                    android:text="next"/>

            </LinearLayout>

            <include
                layout="@layout/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
