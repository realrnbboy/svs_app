<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/app_bar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_default"
                style="@style/row_side_padding_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myblue"
                    android:textSize="@dimen/font_midium"
                    android:text="Date &amp; Time" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/item_sub_layout">

                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="current time"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Code :"/>

                    <EditText
                        android:id="@+id/editTextCode"
                        android:text="EI GUIDE"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/preset_item_other_contents"
                android:orientation="horizontal"
                style="@style/row_side_padding_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myblue"
                    android:textSize="@dimen/font_midium"
                    android:text="Pipe info" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/item_sub_layout">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Pipe name :"/>

                    <EditText
                        android:id="@+id/editTextPipeName"
                        android:text="GTC MOV OUTLET"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Location :"/>

                    <EditText
                        android:id="@+id/editTextLocation"
                        android:text="SEED_GAS"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Tag No. :"/>

                    <EditText
                        android:id="@+id/editTextTagNo"
                        android:text="15'-P-125322-A"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Medium :"/>

                    <EditText
                        android:id="@+id/editTextMedium"
                        android:text="'2 PHASE - GAS50 CRUDE50"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/item_sub_layout"
                    android:layout_marginTop="@dimen/margin_default">

                    <TextView
                        android:layout_marginBottom="@dimen/margin_preset_item_title_bottom"
                        style="@style/preset_item_textview"
                        android:text="Etc operating condition :"/>

                    <EditText
                        android:id="@+id/editTextEtcOperatingCondition"
                        android:text="etc"
                        android:maxLines="4"
                        style="@style/preset_item_edittext"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_confirm_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorContent"
            android:padding="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonNext"
                android:layout_weight="1"
                style="@style/button_confirm"
                android:text="next"/>

        </LinearLayout>

        <include
            layout="@layout/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
