<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPresetItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:checked="false"
    android:focusable="false"
    android:background="@drawable/my_custom_list_equipment_drawable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageViewSelectPreset"
                android:checked="false"
                android:focusable="false"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/my_custom_checkbox_drawable"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:gravity="left">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myorange"
                android:textSize="@dimen/font_large"
                tools:text="Preset Name"/>

            <TextView
                android:id="@+id/textViewCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myblue"
                android:textSize="@dimen/font_midium"
                android:text="code"/>

            <TextView
                android:id="@+id/textViewEquipmentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myblue"
                android:textSize="@dimen/font_midium"
                android:text="equipment name"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
