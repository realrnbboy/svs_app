<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#8f000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/font_larger"
                android:background="#fa9f01"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textColorHighlight="#959ba7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Server Information"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/row_side_margin_dp_15"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_midium"
                    android:text="IP Address"/>

                <EditText
                    android:id="@+id/etServerIp"
                    style="@style/row_side_margin_dp_15"
                    android:layout_width="0dp"
                    android:layout_weight="70"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_midium"
                    android:hint="default 1.222.106.30"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/row_side_margin_dp_15"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_midium"
                    android:text="Port"/>

                <EditText
                    android:id="@+id/etServerPort"
                    style="@style/row_side_margin_dp_15"
                    android:layout_width="0dp"
                    android:layout_weight="70"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_midium"
                    android:hint="default 5010"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/row_side_margin_dp_15"
                android:gravity="center_vertical"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btnReset"
                    style="@style/row_side_margin_dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="load default value"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/row_side_margin_dp_15"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btnReset2"
                    style="@style/row_side_margin_dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="load Dev value"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/font_midium"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="#aaaaaa"
                    android:text="Cancel"/>


                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Confirm"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_midium"
                    android:background="#fa9f01"
                    android:textColorHighlight="#959ba7"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>