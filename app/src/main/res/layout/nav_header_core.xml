<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="216"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="58"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/mylogred"
            app:layout_constraintDimensionRatio="W,1:2"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:gravity="bottom|right"
            android:autoSizeTextType="uniform"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/logo2"
            android:text="S"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="bottom|left"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="22dp"
            app:layout_constraintDimensionRatio="W,1.4:1"
            app:layout_constraintLeft_toRightOf="@id/logo1"
            app:layout_constraintRight_toLeftOf="@id/logo3"
            android:text="mart"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/mylogred"
            android:gravity="bottom|right"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="24dp"

            app:layout_constraintDimensionRatio="W,1:2"
            app:layout_constraintLeft_toRightOf="@id/logo2"
            app:layout_constraintRight_toLeftOf="@id/logo4"
            android:text="V"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="22dp"
            app:layout_constraintDimensionRatio="W,2:1"
            app:layout_constraintLeft_toRightOf="@id/logo3"
            app:layout_constraintRight_toLeftOf="@id/logo5"
            android:text="ibration"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/mylogred"
            android:gravity="bottom|right"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="24dp"
            app:layout_constraintDimensionRatio="W,1:2"
            app:layout_constraintLeft_toRightOf="@id/logo4"
            app:layout_constraintRight_toLeftOf="@id/logo6"
            android:text="S"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="bottom"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="22dp"
            app:layout_constraintDimensionRatio="W,1.6:1"
            app:layout_constraintLeft_toRightOf="@id/logo5"
            app:layout_constraintRight_toRightOf="parent"
            android:text="ensor"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/logo_nav_header_main"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/signallink" />


</LinearLayout>
